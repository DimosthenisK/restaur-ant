datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator nestjsDto {
  provider                        = "prisma-generator-nestjs-dto"
  output                          = "../src/generated/dto"
  outputToNestJsResourceStructure = "true"
  exportRelationModifierClasses   = "true"
  reExport                        = "true"
}

enum Role {
  ADMIN
  USER
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

enum RestaurantStatus {
  ACTIVE
  INACTIVE
}

model User {
  // @DtoReadOnly
  id       String     @id @default(uuid())
  // @DtoUpdateOptional
  name     String     @unique
  // @DtoUpdateOptional
  email    String     @unique
  // @DtoUpdateOptional
  password String
  // @DtoUpdateOptional
  status   UserStatus @default(ACTIVE)
  // @DtoUpdateOptional
  role     Role       @default(USER)

  Reviews Review[]
}

model Restaurant {
  // @DtoReadOnly
  id     String           @id @default(uuid())
  // @DtoUpdateOptional
  name   String
  // @DtoUpdateOptional
  status RestaurantStatus @default(ACTIVE)

  Reviews Review[]
}

model Review {
  // @DtoReadOnly
  id          String   @id @default(uuid())
  rating      Int
  // @DtoUpdateOptional
  comment     String
  dateOfVisit DateTime


  restaurantId String
  userId       String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  user         User       @relation(fields: [userId], references: [id])
}
